{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@formaxui/components": ["libs/formaxui/components/src/index.ts"],
      "@formaxui/components-acrylic": [
        "libs/formaxui/components/src/lib/acrylic/src/index.ts"
      ],
      "@formaxui/components-button": [
        "libs/formaxui/components/src/lib/button/src/index.ts"
      ],
      "@formaxui/components-rnd": [
        "libs/formaxui/components/src/lib/rnd/src/index.ts"
      ],
      "@formaxui/components-titlebar": [
        "libs/formaxui/components/src/lib/title-bar/src/index.ts"
      ],
      "@formaxui/components-window": [
        "libs/formaxui/components/src/lib/window/src/index.ts"
      ],
      "@formaxui/storybook": ["libs/formaxui/storybook/src/index.ts"],
      "@formaxui/types": ["libs/formaxui/types/src/index.ts"],
      "@formaxui/utils": ["libs/formaxui/utils/src/index.ts"],
      "@formaxui/utils-style": [
        "libs/formaxui/utils/src/lib/style/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
